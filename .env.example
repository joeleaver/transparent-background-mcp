# Model Cache Directory
# Directory where downloaded models will be stored
MODEL_CACHE_DIR=~/.cache/transparent-background-mcp

# Hardware Configuration
# Force CPU usage even if GPU is available (true/false)
FORCE_CPU=false

# Model Selection
# Default model to use for background removal
DEFAULT_MODEL=ben2-base

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path (optional)
LOG_FILE=

# Performance Settings
# Maximum batch size for processing multiple images
MAX_BATCH_SIZE=4

# Memory management - clear GPU cache after each operation (true/false)
CLEAR_GPU_CACHE=true

# Advanced Settings
# Custom HuggingFace cache directory
HF_HOME=

# Disable HuggingFace telemetry
HF_HUB_DISABLE_TELEMETRY=true

# PyTorch settings
TORCH_HOME=
